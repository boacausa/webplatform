<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Pets</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Ações
      </div>
      <div class="panel-body">
          <a href="<%= new_ngo_area_pet_path %>" class="btn btn-primary">Cadastrar</a>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        Pets
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>Código</th>
              <th>Name</th>
              <th>ONG</th>
            </tr>
            </thead>
            <tbody>
            <% @pets.each do |pet| %>
            <tr>
              <td><a href="<%= edit_ngo_area_pet_path(pet) %>"><%=pet.id%></a></td>
              <td><a href="<%= edit_ngo_area_pet_path(pet) %>"><%=pet.name%></a></td>
              <td><a href="<%= edit_ngo_area_pet_path(pet) %>"><%=pet.ngo.try(:fantasy_name)%></a></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
