<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Usuários</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Ações
      </div>
      <div class="panel-body">
          <a href="<%= new_ngo_area_user_path %>" class="btn btn-primary">Cadastrar</a>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        Usuários
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>Código</th>
              <th>E-mail</th>
              <th>Nome</th>
              <th>Sobrenome</th>
              <th>CPF</th>
              <th>Telefone</th>
              <th>Criação</th>
              <th>Edição</th>
              <th>Grupo</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.id%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.email%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.name%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.last_name%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.cpf%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.phone%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.created_at%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.updated_at%></a></td>
              <td><a href="<%= edit_ngo_area_user_path(user) %>"><%=user.group%></a></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
