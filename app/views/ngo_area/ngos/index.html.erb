<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">ONGs</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Ações
      </div>
      <div class="panel-body">
          <a href="<%= new_ngo_area_ngo_path %>" class="btn btn-primary">Cadastrar</a>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        ONGs
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>#</th>
              <th>Razão Social</th>
              <th>Nome Fantasia</th>
              <th>E-mail</th>
              <th>Site</th>
            </tr>
            </thead>
            <tbody>
            <% @ngos.each do |ngo| %>
            <tr>
              <td><a href="<%= edit_ngo_area_ngo_path(ngo) %>"><%=ngo.id%></a></td>
              <td><a href="<%= edit_ngo_area_ngo_path(ngo) %>"><%=ngo.social_name%></a></td>
              <td><a href="<%= edit_ngo_area_ngo_path(ngo) %>"><%=ngo.fantasy_name%></a></td>
              <td><a href="<%= edit_ngo_area_ngo_path(ngo) %>"><%=ngo.email%></a></td>
              <td><a href="<%= edit_ngo_area_ngo_path(ngo) %>"><%=ngo.site%></a></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>